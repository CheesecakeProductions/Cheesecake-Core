class blog {
	public function viewblog($format){
		echo'<div class="shadowbox">';
		echo '<br><a class="btn btn-default" href="index.php?action=pb">Post Blog</a>';
		global $dbc, $parser;
		$query = "SELECT blog.id, blog.title, blog.content, users.picture, users.username FROM blog INNER JOIN users ON users.uid = blog.user order by blog.id DESC";
		$data = mysqli_query($dbc, $query);

		while ($row = mysqli_fetch_array($data)) {
			$parsed = $parser->parse($row['content']);
			echo sprintf($format, $row['title'], $row['picture'], $row['username'], $parsed);
		}
		}
		
